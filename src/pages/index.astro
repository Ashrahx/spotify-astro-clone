---
import Layout from '@/layouts/Layout.astro';
import AsideMenu from '@/components/AsideMenu.astro';
---

<Layout title="Spotify Clone">
	<div id="app" class="relative h-screen p-2 gap-2">

		<aside class="[grid-area:aside] flex-col flex overflow-y-auto">
			<AsideMenu/>
		</aside>

		<main class="[grid-area:main] rounded-lg overflow-y-auto bg-primary">
			MAIN
		</main>

		<footer class="[grid-area:player] min-h-[21.875rem]">
			PLAYER
		</footer>

	</div>
</Layout>

<style>
	#app {
		display: grid;
		grid-template-areas: 
		"aside main main"
		"player player player";
		grid-template-columns: 21.875rem;
		grid-template-rows: 1fr auto;
	}
</style>